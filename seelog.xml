<seelog>
    <outputs formatid="main">
        <filter levels="info,debug,critical,error">
            <console />
        </filter>
        <filter levels="debug">
            <file path="/log/debug.log" />
        </filter>
        <filter levels="error">
            <file path="/log/error.log"/>
        </filter>
    </outputs>
    <formats>
        <format id="main" format="%Date/%Time [%LEV] %Msg%n"/>
    </formats>
</seelog>